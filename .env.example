# MongoDB Connection String
# Get from: https://www.mongodb.com/cloud/atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/databasename

# Google API / Gemini API Key
# Get from: https://console.cloud.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# JWT Secret for token signing (use a random 64+ character string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
PORT=4000
CLIENT_ORIGIN=http://localhost:3000

# Admin Credentials (change these in production!)
ADMIN_CODE=Admin@123
ADMIN_EMAIL=Admin@jigyasa.in
ADMIN_PASSWORD=Admin@123
